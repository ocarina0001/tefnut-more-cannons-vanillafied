    <ThingDef ParentName="TEFNUT_MannedCannonBase">
        <defName>TEFNUT_Turret_FlakCannon</defName>
        <label>flak cannon</label>
        <description>An ancient stationary weapon, consisting of a large flak cannon, originally designed for anti-aircraft usage. Requires 20mm magazines to fire. Its internal ammo rack carries 20 magazines of 8 rounds each, for a total ammo capacity of 160, but may explode when damaged.</description>
        <graphicData>
            <texPath>Things/Building/FlakCannon</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>(3,3)</drawSize>
            <damageData>
                <rect>(0.2,0.2,0.6,0.6)</rect>
            </damageData>
            <shadowData>
                <volume>(1.5,0.35,1.4)</volume>
                <offset>(0,0,-0.05)</offset>
            </shadowData>
        </graphicData>
        <size>(3,3)</size>
        <uiIconPath>UI/Icons/FlakCannon_MenuIcon</uiIconPath>
        <building>
            <turretGunDef>TEFNUT_Gun_FlakCannon</turretGunDef>
            <turretTopDrawSize>4</turretTopDrawSize>
            <turretBurstWarmupTime>0</turretBurstWarmupTime>
            <turretBurstCooldownTime>0.4</turretBurstCooldownTime>            <!-- Reload Time -->
        </building>
        <interactionCellOffset>(0,0,-2)</interactionCellOffset>
        <specialDisplayRadius>39.9</specialDisplayRadius>
        <costStuffCount>150</costStuffCount>
        <constructionSkillPrerequisite>5</constructionSkillPrerequisite>
        <costList>
            <ComponentIndustrial>1</ComponentIndustrial>
        </costList>
        <statBases>
            <MaxHitPoints>350</MaxHitPoints>
            <WorkToBuild>2800</WorkToBuild>
            <Mass>200</Mass>
        </statBases>
        <researchPrerequisites>
            <li>TEFNUT_HeavyEmplacements</li>
        </researchPrerequisites>
        <comps>
            <li Class="CompProperties_Refuelable">
                <fuelLabel>Ammo magazine</fuelLabel>
                <fuelGizmoLabel>Ammo</fuelGizmoLabel>
                <fuelFilter>
                    <thingDefs>
                        <li>TEFNUT_FlakCannonAmmo</li>
                    </thingDefs>
                </fuelFilter>
                <fuelCapacity>8</fuelCapacity>
                <initialFuelPercent>0</initialFuelPercent>
                <autoRefuelPercent>1</autoRefuelPercent>
                <showFuelGizmo>true</showFuelGizmo>
                <minimumFueledThreshold>1</minimumFueledThreshold>
                <atomicFueling>false</atomicFueling>
                <fuelMultiplier>1</fuelMultiplier>
                <factorByDifficulty>false</factorByDifficulty>
                <consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
                <outOfFuelMessage>Cannot shoot: out of ammo</outOfFuelMessage>
                <fuelIconPath>UI/Overlays/Ammo</fuelIconPath>
            </li>
        </comps>
        <thingCategories>
            <li>BuildingsSecurity</li>
        </thingCategories>
        <minifiedDef>MinifiedThing</minifiedDef>
    </ThingDef>
